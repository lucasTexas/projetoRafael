<!DOCTYPE html>
<html lang="en">
    <%- include("../partials/nav.ejs") %>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title>Relatório Abastecimento</title>
</head>
<body>
    <h2>Listagem de Abastecimentos</h2><br><br>
    <% abastecimentos.forEach(function(abastecimento){ %>
        Tipo de Combustível: <%= abastecimento.tipoCombustivel %><br>
        Data: <%= abastecimento.data %><br>
        Hora: <%= abastecimento.hora %><br>
        Valor: <%= abastecimento.valor %> <br>
        <a href="/detalhar-abastecimento/<%= abastecimento.data %>/<%= abastecimento.hora %>"><input type="button" value="Detalhar"></a> 
        <form action="/excluir-abastecimento/<%= abastecimento.data %>/<%= abastecimento.hora %>" method="post"><input type="submit" value="Excluir"></form> <br><br> 
        <form action="/atualizar-abastecimento/<%= abastecimento._id %>" method="get"><input type="submit" value="Atualizar"></form> <br><br> 

        <% }) %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
